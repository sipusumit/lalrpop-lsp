{
  "name": "lalrpop-language-server",
  "displayName": "LALRPOP Language Server",
  "description": "LSP support for LALRPOP",
  "license": "MIT",
  "version": "0.0.3",
  "keywords": [
    "LALRPOP",
    "language-server",
    "tower-lsp"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/LighghtEeloo/lalrpop-lsp"
  },
  "publisher": "LitiaEeloo",
  "categories": [
    "Programming Languages"
  ],
  "engines": {
    "vscode": "^1.66.0"
  },
  "enabledApiProposals": [],
  "activationEvents": [
    "onLanguage:LALRPOP"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "lalrpop",
        "aliases": [
          "LALRPOP",
          "lalrpop"
        ],
        "extensions": [
          "lalrpop"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "lalrpop",
        "scopeName": "source.lalrpop",
        "path": "./syntaxes/lalrpop.tmLanguage.json",
        "embeddedLanguages": {
          "meta.embedded.starter": "rust"
        }
      }
    ],
    "configuration": {
      "type": "object",
      "title": "lalrpop-language-server",
      "properties": {
        "lalrpop-language-server.trace.server": {
          "type": "string",
          "scope": "window",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "enumDescriptions": [
            "No traces",
            "Error only",
            "Full log"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the LALRPOP language server."
        }
      }
    }
  },
  "scripts": {
    "postinstall": "cd client && pnpm i",
    "esbuild-base": "esbuild ./client/src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "test-compile": "tsc -p ./",
    "compile": "cross-env NODE_ENV=production tsc -b",
    "watch": "rm -rf dist && tsc -b -w",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile && npm run lint",
    "build": "webpack --config webpack.config.js",
    "package": "vsce package --no-dependencies",
    "publish": "vsce publish --no-dependencies"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "cross-env": "^7.0.2",
    "@electron/rebuild": "^3.2.9",
    "esbuild": "0.24.0",
    "eslint": "^9.16.0",
    "glob": "^11.0.0",
    "mocha": "^11.0.2",
    "typescript": "5.4.5",
    "@vscode/test-electron": "^2.4.1",
    "vscode-uri": "^3.0.2",
    "webpack": "^5.82.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "vscode-languageclient": "9.0.1"
  },
  "packageManager": "pnpm@9.13.2+sha512.88c9c3864450350e65a33587ab801acf946d7c814ed1134da4a924f6df5a2120fd36b46aab68f7cd1d413149112d53c7db3a4136624cfd00ff1846a0c6cef48a"
}